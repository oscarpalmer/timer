		"rolldown:build": "npx rolldown -c",
		"rolldown:watch": "npx rolldown -c --watch",
		"test": "npx vitest --coverage",
		"watch": "npx vite build --watch"
	},
	"type": "module",
	"types": "types/index.d.ts",
	"version": "0.38.1"
