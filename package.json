		}
	},
	"files": [
		"dist",
		"src",
		"types"
	],
	"keywords": [
		"requestAnimationFrame",
		"setInterval",
		"setTimeout",
		"timer"
	],
	"license": "MIT",
	"module": "dist/index.js",
	"name": "@oscarpalmer/timer",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/oscarpalmer/timer.git"
	},
	"scripts": {
		"build": "npm run clean && npx vite build && npm run rolldown:build && npx tsc",
