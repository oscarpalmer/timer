	"name": "@oscarpalmer/timer",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/oscarpalmer/timer.git"
	},
	"scripts": {
		"build": "npm run clean && npm run build:js && npm run rollup && npm run types",
