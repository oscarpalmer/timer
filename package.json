		"rollup": "npx rollup -c",
		"test": "npx vitest --coverage",
		"types": "npx tsc && npx dts-bundle-generator --config ./dts.config.cts --silent",
		"watch": "npx vite build --watch"
	},
	"type": "module",
	"types": "types/index.d.cts",
	"version": "0.36.0"
